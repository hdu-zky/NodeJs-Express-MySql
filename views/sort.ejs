<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>笔趣阁小说阅读</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <!--<link rel="stylesheet" href="bootstrap-3.3.7-dist/css/css/bootstrap.min.css">-->
</head>
<style>
    .header ul{
        width: 100%;
        height: 35px;
        line-height: 35px;
        overflow: hidden;
        padding: 0px;
        float: left;
        background-color: #ECF0F0;
        /*list-style-type: disc;*/
    }
    .header ul>li{
        float: left;position: relative;
        display: block;
        text-align: center;
    }
    .header ul>li>a {
        color: #000;
        font-size: 16px;
        font-family: "microsoft yahei";
        text-decoration: none;
        text-decoration-line: none;
        text-decoration-style: initial;
        text-decoration-color: initial;
    }
    .line {
        border-bottom: 1px solid #efefef;
        padding-bottom: 5px;
        padding-top: 5px;
        font-size: 16px;
        font-family: "microsoft yahei";
        color: #999;
    }
    .line>a {
        color: #666;
        text-decoration: none;
    }
    .line .blue {
        color: #007BB1;
        font-size: 18px;
        margin-left: 1ex;
    }
</style>
<body>
<!--顶部导航栏-->
<nav class="nav  nav-tabs navbar-inverse" role="navigation">
    <div class="container-fluid">
        <!--顶部左侧导航栏-->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#example-navbar-collapse">
                <span class="sr-only">切换导航</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a  class="navbar-brand" href="/">笔趣阁手机版</a>
        </div>
        <!--顶部右侧导航-->
        <div class="collapse navbar-collapse" id="example-navbar-collapse">
            <ul class="nav navbar-nav">
                <!--<li class="active"><a href="#">主页</a></li>-->
                <!--<li><a href="#">信息</a></li>-->
                <!--<li><a href="#">联系</a></li>-->
            </ul>
            <!--个人信息下拉框-->
            <ul class="nav navbar-nav navbar-sub navbar-right">
                <!--如果是已经登陆展示的样式-->
                <% if (userInfo.uId) { %>
                    <li class="nav navbar-nav dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="true">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                            欢迎，<%= userInfo.uName %><span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">消息<span class="badge bg-warning">42</span></a></li>
                            <li><a href="/user">个人信息</a></li>
                            <li><a href="/logout">退出</a></li>
                        </ul>
                    </li>
                    <!--如果还未登录展示的样式-->
                <% }  else { %>
                    <li><a href="/login">登入</a></li>
                    <li><a href="/reg">注册</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

<div class="row">
    <!--右边侧内容区占10个栅格-->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="header">
            <ul class="">
                <li class="col-sm-3 col-xs-3"><a href="/sort" class="active">分类</a></li>
                <li class="col-sm-3 col-xs-3"><a href="#">排行</a></li>
                <li class="col-sm-3 col-xs-3"><a href="#">全本</a></li>
                <li class="col-sm-3 col-xs-3"><a href="#">书架</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="container" style="margin-top: 15px">
    <div class="row">
     <div class="col-sm-12 col-xs-12">
        <label class="control-label sr-only" for="searchBook">搜索框</label>
        <div class="input-group form-group">
            <input type="text" class="form-control" placeholder="输入书名/作者名查找" id="inputBook">
            <span class="input-group-btn">
                    <button class="btn btn-default" type="button" id="searchBook" onclick="searchBook()">搜索</button>
            </span>
        </div>
    </div>
    </div>
</div>
<div class="container">
<div class="row">
    <ul class="col-sm-12">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="玄幻小说" onclick="getData(1)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="仙侠小说" onclick="getData(2)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="都市小说" onclick="getData(3)">
    </ul>
    <ul class="col-sm-12">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="历史小说" onclick="getData(4)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="游戏小说" onclick="getData(5)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="科幻小说" onclick="getData(6)">
    </ul>
    <ul class="col-sm-12">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="言情小说" onclick="getData(7)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="同人小说" onclick="getData(8)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="灵异小说" onclick="getData(9)">
    </ul>
    <ul class="col-sm-12">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="奇幻小说" onclick="getData(10)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="竞技小说" onclick="getData(11)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="武侠小说" onclick="getData(12)">
    </ul>
    <ul class="col-sm-12">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="军事小说" onclick="getData(13)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="校园小说" onclick="getData(14)">
        <input class="btn btn-default col-sm-4 col-xs-4" type="button" value="官场小说" onclick="getData(15)">
    </ul>
</div>
</div>

<!--相应类型书籍列表-->
<div class="container">
    <div class="row">
        <ul class="col-sm-12" id="bookList">

        </ul>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <!--<div class="page">-->
                <button  class="btn btn-primary" id="firstPage">首页</button>
                <button  class="btn btn-primary" id="prevPage">上一页</button>
                <button  class="btn btn-primary" id="nextPage">下一页</button>
                <button  class="btn btn-primary" id="lastPage">尾页</button>
                <label>
                    (第<span id="pageIndex"></span>/<span id="pageCount"></span>页)
                    当前<span id="pageSize"></span>条/页
                </label>
            <!--</div>-->
        </div>
        <div class=" col-sm-12" style="margin-top: 15px">
            <div class="input-group form-group">
                <input type="text" class="form-control" placeholder="输入页数" id="searchPageIndex">
                <span class="input-group-btn">
                <button class="btn btn-default" type="button" onclick="jumpPage()">跳转</button>
            </span>
            </div>
        </div>

    </div>
</div>
<%- include footer %>
<script>
    var typeId=1;
    var pageSize=20;
    var pIndex=1;
    var pageCount =1;
    $(function(){
        getData(1,1,20);
    })
    // bookTypeId:查找书籍类型 pageIndex：相应页面 pageSize：每页大小
    function getData(bookTypeId=1, pageIndex=1, pageSize=20){
        if(pageIndex<1 || (pageCount>0 && pageIndex > pageCount)){
            alert("访问页面超过范围！");
            return;
        }
        typeId = bookTypeId; pIndex= pageIndex;
        var data={bookTypeId: bookTypeId, pageIndex: pageIndex, pageSize: pageSize};
        // getSortBook
        $.post('http://192.168.0.109:3000/sort', data,
            function (result) {
                if (result.success) {
                    var html = '';
                    for(var i = 0; i < result.data.length; i++)
                    {
                        html += '<p class="line">';
                        html += '<span href="#">[' + result.data[i].bookTypeName + ']</span>';
                        html += '<a href= "/bookInfo/' + result.data[i].bookId + '" class="blue">'+ result.data[i].bookName +'</a>/';
                        html += '<a href="/author/' + result.data[i].authorId +'">'+ result.data[i].authorName + '</a>';
                        html += '</p>';
                    }
                    document.getElementById('bookList').innerHTML = html;
                    pageCount = result.pageCount;
                    console.log(pageIndex);
                    console.log(pageCount);
                    checkState(pageIndex, pageCount);
                    $('#pageIndex').text(pageIndex);
                    $('#pageCount').text(pageCount);
                    $('#pageSize').text(pageSize);
                    $("html,body").animate({scrollTop:$("#bookList").offset().top}, 300);
                    console.log(result.data);
                } else {
                    alert("获取数据失败");
                }
            }
        )
    }
    // 搜索书
    function searchBook() {
        $('#searchBook').prop('disabled', true);
        var keyWord = $('#inputBook').val();
        var data={keyWord: keyWord};
        pIndex=1;
        pageCount =1;
        $('#pageIndex').text(pIndex);
        $('#pageCount').text(pageCount);
        // getSortBook
        $.post('http://192.168.0.109:3000/searchBook', data,
            function (result) {
                if (result.success) {
                    var html = '';
                    for(var i = 0; i < result.data.length; i++)
                    {
                        html += '<p class="line">';
                        html += '<span href="#">[' + result.data[i].bookTypeName + ']</span>';
                        html += '<a href= "/bookInfo/' + result.data[i].bookId + '" class="blue">'+ result.data[i].bookName +'</a>/';
                        html += '<a href="/author/' + result.data[i].authorId +'">'+ result.data[i].authorName + '</a>';
                        html += '</p>';
                    }
                    document.getElementById('bookList').innerHTML = html;
                } else {
                    var html = '没有对应数据';
                    document.getElementById('bookList').innerHTML = html;
                }
            }
        )
        $('#searchBook').prop('disabled', false);
        checkState(pIndex, pageCount);
    }

    $('#firstPage').click(
        function () {
            getData(typeId, 1, pageSize);
        }
    )
    $('#prevPage').click(
        function () {
            getData(typeId, pIndex-1, pageSize);
        }
    )
    $('#nextPage').click(
        function () {
            getData(typeId, pIndex+1, pageSize);
        }
    )
    $('#lastPage').click(
        function () {
            getData(typeId, pageCount, pageSize);
        }
    )
    function checkState(pageIndex, pageCount) {
        // 如果在首页且总共只有一页
        if(pageIndex == 1 && pageIndex == pageCount){
            $('#firstPage').prop('disabled',true);
            $('#prevPage').prop('disabled',true);
            $('#nextPage').prop('disabled',true);
            $('#lastPage').prop('disabled',true);
        }
        // 如果在首页且总共有多页
        else if(pageIndex == 1 && pageIndex < pageCount){
            $('#firstPage').prop('disabled',true);
            $('#prevPage').prop('disabled',true);
            $('#nextPage').prop('disabled',false);
            $('#lastPage').prop('disabled',false);
        }
        // 如果不在首页且不在尾页
        else if(pageIndex > 1 && pageIndex < pageCount){
            $('#firstPage').prop('disabled',false);
            $('#prevPage').prop('disabled',false);
            $('#nextPage').prop('disabled',false);
            $('#lastPage').prop('disabled',false);
        }
        // 如果在尾页
        else if(pageIndex > 1 && pageIndex == pageCount){
            $('#firstPage').prop('disabled',false);
            $('#prevPage').prop('disabled',false);
            $('#nextPage').prop('disabled',true);
            $('#lastPage').prop('disabled',true);
        }
    }
    function jumpPage() {
        getData(typeId, $('#searchPageIndex').val(), pageSize);
    }

</script>
</body>
</html>
