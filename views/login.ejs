<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Cache-control" content="no-cache">
    <meta http-equiv="Cache" content="no-cache">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.2/css/bootstrapValidator.min.css"/>
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <title>Document</title>
    <style>
        body{
            background-color: #f8f8f8!important;
        }
        .form {
            position: absolute;
            top: 45%;
            left: 50%;
            margin: -160px 0 0 -160px;
            width: 320px;
            /*height: 360px;*/
            padding: 36px;
            box-shadow: 0 0 100px rgba(0, 0, 0, .08);
        }
        .form .logo{
            text-align: center;
            height: 40px;
            width: 200px;
            line-height: 40px;
            cursor: pointer;
            margin-bottom: 14px;
            /*padding-left: 10px;*/
        }
        .logo img{
            width: 40px;
            float: left;
        }

        .form .logo span {
            vertical-align: text-bottom;
            font-size: 16px;
            text-transform: uppercase;
            display: inline-block;
        }
    </style>
</head>
<body>
<div class="form">
    <div class="logo">
        <img alt="logo" src="/images/headImgDefault.png">
        <span>欢迎注册登录</span>
    </div>
    <!-- action="/login"  method="post" -->
    <form class="form-horizontal"id="loginForm">
        <div class="form-group  has-success has-feedback">
            <!--<label for="inputName" class="control-label col-xs-3">帐号</label>-->
            <div class="col-xs-12">
                <input type="text" class="form-control" id="inputName" name="name" placeholder="用户名/账号/邮箱/手机号">
            </div>
        </div>
        <div class="form-group">
            <!--<label for="inputPwd" class="control-label col-xs-3">密码</label> 看不清，换一张-->
            <div class="col-xs-12">
                <input type="password" class="form-control" id="inputPwd" name="pwd" placeholder="密码">
            </div>
        </div>
        <div class="form-group" style="display: none" id="verifyCode">
            <div class="col-xs-5">
                <input type="text" class="form-control" placeholder="验证码" name="verifyCode" id="inputCode"/>
            </div>
            <span class="col-xs-6"><a href="#" id="changeImg"><canvas id="canvas" width="130" height="34"></canvas>
            </a></span>
        </div>
        <div class="form-group">
            <div class="checkbox col-xs-12">
                <label  class="col-xs-6">
                    <input type="checkbox" id="saveAcc"> 记住密码
                </label>
                <label>
                    <input type="checkbox" id="autoSign"> 自动登录
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                <button class="btn btn-primary col-xs-12" id="login">登 录</button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12">
                <a class="col-xs-5" href="/reg" role="link">忘记密码？</a>
                <!--<a class="btn btn-default col-xs-5" href="/reg" role="button">忘记密码</a> type="submit"-->
                <span class=" col-xs-2"></span>
                <a class="col-xs-5" href="/reg" role="link">去注册！</a>
                <!--<a class="btn btn-default col-xs-5" href="/reg" role="button">注 册</a>-->
            </div>
        </div>
    </form>
</div>

<script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
<script src="https://cdn.staticfile.org/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
<script src="/javascripts/common.js"></script>
<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.2/js/bootstrapValidator.min.js"></script>
<script src="/javascripts/jquery.base64.js"></script>
<script>
    $('form').bootstrapValidator({
        message: 'This value is not valid',
        feedbackIcons: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
            name: {
                message: '用户名验证失败',
                validators: {
                    notEmpty: {
                        message: '用户名不能为空'
                    },
                    stringLength: {
                        min: 3,
                        max: 30,
                        message: '用户名最少4位最长30位'
                    },
                    different: {
                        field: 'password',
                        message: '账号不能和密码相同'
                    }
                }
            },
            pwd: {
                validators: {
                    notEmpty: {
                        message: '密码不能为空'
                    },
                    different: {
                        field: 'name',
                        message: '密码不能和账号相同'
                    },
                    stringLength: {
                        min: 4,
                        message: '密码最少为4位'
                    }
                }
            },
            verifyCode: {
                message: '验证码失败',
                validators: {
                    notEmpty: {
                        message: '验证码不能为空'
                    },
                    stringLength: {
                        min: 4,
                        max: 4,
                        message: '验证码4位'
                    },
                    regexp: {
                        regexp: /^[a-zA-Z0-9]+$/,
                        message: '验证码只能是数字和字母'
                    },
                }
            },
        }
    });
    var verifyCode='';
    $(function() {
        if( !$.cookie('login_error')){
            $.cookie('login_error', '0');
        }
        //输错三次及以上账号密码
        if($.cookie('login_error')!= null && parseInt( $.cookie('login_error') ) >=3 ){
            $('#verifyCode').show();
            verifyCode = drawPic();
        }
        // alert(parseInt( $.cookie('login_error')));
    })
    //调用画图方法画图并返回对应验证码
    //点击验证码图时刷新
    document.getElementById("changeImg").onclick = function(e){
        e.preventDefault();
        drawPic();
    }
    /**生成一个随机数**/
    function randomNum(min,max){
        return Math.floor( Math.random()*(max-min)+min);
    }
    /**生成一个随机色**/
    function randomColor(min,max){
        var r = randomNum(min,max);
        var g = randomNum(min,max);
        var b = randomNum(min,max);
        return "rgb("+r+","+g+","+b+")";
    }
    /**绘制验证码图片**/
    function drawPic(){
        var canvas=document.getElementById("canvas");
        var width=canvas.width;
        var height=canvas.height;
        var ctx = canvas.getContext('2d');
        var vCode=''; //验证码
        ctx.textBaseline = 'middle';

        /**绘制背景色**/
        ctx.fillStyle = randomColor(180,240); //颜色若太深可能导致看不清
        ctx.fillRect(0,0,width,height);
        /**绘制文字**/
        var str = 'ABCEFGHJKLMNPQRSTWXY123456789';
        for(var i=0; i<4; i++){
            var txt = str[randomNum(0,str.length)];
            vCode += txt;
            ctx.fillStyle = randomColor(50,160);  //随机生成字体颜色
            ctx.font = randomNum(30,40)+'px SimHei'; //随机生成字体大小
            var x = 14+i*28;
            var y = 18;
            var deg = randomNum(-20, 20);
            //修改坐标原点和旋转角度
            ctx.translate(x,y);
            ctx.rotate(deg*Math.PI/180);
            ctx.fillText(txt, 0,0);
            //恢复坐标原点和旋转角度
            ctx.rotate(-deg*Math.PI/180);
            ctx.translate(-x,-y);
        }
        /**绘制干扰线**/
        for(var i=0; i<3; i++){
            ctx.strokeStyle = randomColor(100,180);
            ctx.beginPath();
            ctx.moveTo( randomNum(0,width), randomNum(0,height) );
            ctx.lineTo( randomNum(0,width), randomNum(0,height) );
            ctx.stroke();
        }
        /**绘制干扰点**/
        for(var i=0; i<8; i++){
            ctx.fillStyle = randomColor(0,255);
            ctx.beginPath();
            ctx.arc(randomNum(0,width),randomNum(0,height), 1, 0, 2*Math.PI);
            ctx.fill();
        }
        return vCode;
    }
    function login () {
        if( !$.cookie('login_error')){
            $.cookie('login_error', '0');
        }
        //输错三次及以上账号密码
        if($.cookie('login_error')!= null && parseInt( $.cookie('login_error') ) >=3 ){
            verifyCode =drawPic();
            $('#verifyCode').show();
        }
        var name = $('#inputName').val();
        var pwd = $('#inputPwd').val();
        console.log('用户名 '+ name +'密码 '+ pwd);
        if (pwd.length == 0 || name.length == 0) {
            alert("用户名和密码不能为空！");
            return;
        }
        if($('#inputCode').val()!='' && $('#inputCode').val().toLowerCase() ==''){
            alert("验证码不能为空！");
            return;
        }
        if($('#inputCode').val()!='' && $('#inputCode').val().toLowerCase() != verifyCode.toLowerCase()){
            alert("验证码错误！");
            return;
        }
        $.post(hostUrl + '/login',
            {name: name,pwd: pwd},
            function (result) {
                alert(result.msg);
                if(result.success){
                    saveAccount();
                    window.location.href = hostUrl;
                    console.log(result.data);
                }else{
                    // 登陆失败清除密码刷新图片
                    $('#inputPwd').val('');
                    verifyCode =drawPic();
                }
                // $('#content').text(JSON.stringify(result));
            }
        );
    }
    $('#login').click(
        function (){
            login();
        }
    );
    function autoSign () {
        //cookie里保存账密项为真则展示相应数据
        if ($.cookie("saveAcc") == "true") {
            $("#saveAcc").prop("checked", true);
            // 自动登录为真
            if($.cookie("autoSign") == "true"){
                alert('das');
                $("#autoSign").prop("checked", true);
                // window.location.href = '/';
            }
        }
    }
    // 保存账号密码到cookie以自动登录
    function saveAccount() {
        if ($("#saveAcc").prop("checked")) {
            $.cookie("saveAcc", "true", { expires: 7 }); //存储一个带7天期限的cookie
        }
        else {
            $.cookie("saveAcc", "false", { expire: -1 });
        }
        if($("#autoSign").prop("checked")){
            $.cookie("autoSign", "true", { expires: 7 }); //存储一个带7天期限的cookie
        }else{
            $.cookie("autoSign", "false", { expire: -1 });
        }
    };
</script>
</body>
</html>